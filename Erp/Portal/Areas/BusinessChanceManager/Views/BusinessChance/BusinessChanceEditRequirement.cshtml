}
@{
    ViewBag.Title = "商机";
}
@section HeadScript{
    <script type="text/javascript">
        function EnterPress(e) { //传入 event
            var e = e || window.event;
            if (e.keyCode == 13) {
                $('#formSubmit').click();
            }
        }
    </script>
}
