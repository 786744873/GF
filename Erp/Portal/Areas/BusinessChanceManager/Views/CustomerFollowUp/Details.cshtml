@using CommonService.Model;

@model CommonService.Model.C_Customer_Follow
@{
    Layout = "~/Views/Shared/_ViewPanelTemplate.cshtml";//普通Panel页面固定模板
}
@{
    ViewBag.Title = "客户跟进详细信息";
}
<div class="formbody">
    <ul class="forminfo">
        <li><label>客户名称：</label><span>@Model.C_Customer_name</span></li>
        <li><label>联系人名称：</label><span>@Model.C_Customer_follow_contacter_name</span></li>
        <li><label>联系方式：</label><span>@Model.C_Customer_Follow_contactinformationName</span></li>
        <li><label>跟进时间：</label><span>@(Model.C_Customer_Follow_time == null ? "" : Model.C_Customer_Follow_time.Value.ToString("yyyy-MM-dd"))</span></li>
        <li><label>跟进人：</label><span>@Model.C_Customer_Follow_creatorName</span></li>
        <li><label>跟进结果：</label><span>@Model.C_Customer_Follow_Result</span></li>
        <li><label>跟进阶段：</label><span>@Model.C_Customer_Follow_stageName</span></li>
    </ul>
</div>
