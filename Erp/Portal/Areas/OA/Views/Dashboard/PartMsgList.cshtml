@{
    Layout = null;
}
@{
    List<CommonService.Model.OA.O_Email_user> lists = ViewBag.emails;
}
<div class="col-md-6 col-sm-6">
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-envelope-open font-purple-intense"></i>
                <span class="caption-subject font-purple-intense bold uppercase">我的邮件</span>
            </div>
            <div class="actions">
                <div class="btn-group">
                    <a class="btn btn-sm btn-default btn-circle" href="javascript:;" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                        操作 <i class="fa fa-angle-down"></i>
                    </a>
                    <div class="dropdown-menu hold-on-click dropdown-checkboxes pull-right">
                        <label><a href="/oa/email/create?skipType=2" data-messageid="23" class="ajaxify"> <i class="fa fa-edit"></i>写邮件</a></label>
                    </div>
                </div>
                <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="全屏">
                </a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="scroller" style="height: 300px;" data-always-visible="1" data-rail-visible="0">
                <ul class="feeds">
                    @foreach (var item in lists)
                    {
                        <li>
                            <div class="col1 col-md-3">
                                <div class="cont">
                                    @*<div class="cont-col1">
                                            <div class="label label-sm label-info">
                                                <i class="fa fa-check"></i>
                                            </div>
                                        </div>*@
                                    <div class="cont-col1">
                                        <div class="desc">
                                            <a href="/oa/email/List?emailCode=@item.O_Email_code&msgID=@item.C_Messages_id&Mlist=2" class="ajaxify" style="color:#5b9bd1">@item.O_Email_title</a>
                                            @*<span class="fa-lg fa fa-warning "></span>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col2">
                                @if (item.O_Email_createTime != null)
                                {
                                    <div class="date">
                                        @item.O_Email_createTime.Value.ToString("yyyy/MM/dd")
                                    </div>
                                }

                            </div>
                        </li>
                    }
                </ul>
            </div>
            <div class="scroller-footer">
                <div class="btn-arrow-link pull-right">
                    <a href="/oa/email/list" class="ajaxify">查看更多</a>
                    <i class="icon-arrow-right"></i>
                </div>
            </div>
        </div>
    </div>
</div>