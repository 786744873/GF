@{
    Layout = null;
}
<!-- BEGIN PAGE HEADER-->
@{Html.RenderAction("OAContentPageHead");}
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box green-meadow">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-user"></i>流程管理
                </div>
                <div class="list_tool_dialog_toolbar actions">
                    <a class="btn btn-primary btn-sm ajaxify" href="/oa/flow/create">
                        <i class="fa fa-pencil"></i> 新增
                    </a>
                    <div class="btn-group">
                        <a class="btn btn-primary btn-sm" href="javascript:;" data-toggle="dropdown">
                            <i class="fa fa-cogs"></i> 工具栏 <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            @*<li>
                                <a href="/oa/flow/edit?flowCode={sid_Iterm}" operatetargettype="popdialog" operatetargetid="baseLargeModal" relationid="a_edit" nodatatip="请选中信息！" edit="edit">
                                    <i class="fa fa-pencil"></i> 修改
                                </a>
                            </li>*@
                            <li>
                                <a href="/oa/flow/delete?flowCode={sid_Iterm}" operatetargettype="ajaxtodo" singleoperate="singleoperate" nodatatip="请选中信息！" confirmtip="确认要删除所选数据吗？">
                                    <i class="fa fa-trash-o"></i> 删除
                                </a>
                            </li>
                            <li>
                                <a href="/oa/flowset/list?flowCode={sid_Iterm}" operatetargettype="ajaxify" relationid="a_ajaxify" nodatatip="请选中信息！" edit="edit">
                                    <i class="fa fa-pencil"></i> 预设
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <div id="flowList_search" class="row">
                    @Html.Hidden("isExecutedSearch", "0")
                    <div class="col-md-12">
                        <div class="col-md-9"></div>
                        <div class="col-md-2">
                            <div class="form-group">
                                流程名称：<input name="s_title" id="s_title" type="text" class="form-control input-small input-inline">
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="btn-group pull-right">
                                <div class="btn-group">
                                    <button class="btn green" onclick="executeSearch('flowList', 'flowList_search')">
                                        查询<i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="flowList">
                    <thead>
                        <tr>
                            <th>流程Guid</th>
                            <th>流程名称</th>
                            <th>自由流程</th>
                            <th>创建时间</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--数据行在这里-->
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
<!-- END PAGE CONTENT-->
<!-- BEGIN MAIN JS -->
<!--列表工具栏按钮处理js-->
<script type="text/javascript" src="/theme/oajs/bar.js"></script>
<script>
    var defaultColumns = [
         { "sName": "O_Flow_code", "bVisible": false },
         { "sName": "O_Flow_name", "render": function (data, type, full) { if (data.length > 40) { data = data.substring(0, 40) + "..." } return "<a href='' style='color:#5b9bd1' class='ajaxify'>" + data + "</a>"; } },
         { "sName": "O_Flow_isFree" },
         { "sName": "O_Flow_createTime" }
    ];//table 默认列扩展
    var submitUrl = '/oa/flow/ajaxlist';//数据获取地址
    TableManaged.init('flowList', "flowList_search", defaultColumns, submitUrl);//用table id,table search id,默认列 初始化table对象
</script>
<!-- END MAIN JS -->
