                    <i class="icon-bar-chart theme-font hide"></i>
                    <span class="caption-subject font-blue-madison uppercase">最近收藏</span>
                </div>
                <div class="tools">
                    <a href="/kms/study/MyCollection">
                        更多
                    </a>
                    @*<i class="fa fa-chevron-circle-right"></i>*@
                </div>
            </div>
            <div class="portlet-body">
                <!--BEGIN TABS-->
                <div class="task-content">
                    <div style="height: 280px;" data-always-visible="1" data-rail-visible1="0" data-handle-color="#D7DCE2">
                        <ul class="feeds">
                            @foreach (var item in studyList)
                            {
                                <li>
                                    <div class="col1">
                                        <div class="cont">
                                            <div class="cont-col1">
                                                <div class="label label-sm label-success">
                                                    <i class="fa fa-heart"></i>
                                                </div>
                                            </div>
                                            <div class="cont-col2">
                                                @{
                                string href = "";
                                if (item.K_Resources_type == Convert.ToInt32(CommonService.Common.ResourcesTypeEnum.视频))
                                {
                                    href = "/kms/avi/Details?id=" + item.K_Resources_url;
                                }
                                else
                                {
                                    href = "/kms/Resources/SelectResources?resourceCode=" + item.K_Resources_code + "&type=" + item.K_Resources_type;
                                }
                                                }
                                                <div class="desc">
                                                    <a href="@href" style="color:gray;text-decoration-line:none;" onmouseover="this.style.color = '#5b9bd1'; this.style.textDecoration = 'none'" onmouseout="    this.style.color = 'gray';"> @item.K_Resources_name</a>
                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="col2">
                                        <div class="date">
                                            @(Convert.ToDateTime(item.K_study_createTime).ToShortDateString())
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <!--END TABS-->
            </div>
        </div>
        <!-- END PORTLET -->
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart theme-font hide"></i>
                    <span class="caption-subject font-blue-madison uppercase">学习历史</span>
                </div>
                <div class="tools">
                    <a href="/kms/study/MyBrowse">
                        更多
                    </a>
                    @*<i class="fa fa-chevron-circle-right"></i>*@
                </div>
            </div>
            <div class="portlet-body">
                <div class="row number-stats margin-bottom-30" style="width:98%;">
                    @foreach (var item in browseList)
                    {
                        <div class="col-md-4 col-sm-12 col-xs-12">
                            <div class="news-blocks">
                                @{
                                    string href = "";
                                    if (item.K_Resources_type == Convert.ToInt32(CommonService.Common.ResourcesTypeEnum.视频))
                                    {
                                        href = "/kms/avi/Details?id=" + item.K_Resources_url;
                                    }
                                    else
                                    {
                                        href = "/kms/Resources/SelectResources?resourceCode=" + item.K_Resources_code + "&type=" + item.K_Resources_type;
                                    }
                                }
                                <a href="@href">
                                    <img class="img-responsive" src="@item.K_Resources_coverImage" style=" height:180px;width:240px;">
                                </a>
                                <p style="color:#555;" class="margin-top-10">
                                    <span>
                                        @if (item.K_Resources_type != Convert.ToInt32(CommonService.Common.ResourcesTypeEnum.文章))
                                        {
                                            item.K_Resources_name = item.K_Resources_name.Split('.')[0];
                                            if (item.K_Resources_name.Length > 10)
                                            {
                                                item.K_Resources_name = item.K_Resources_name.Substring(0, 10);
                                            }
                                        }
                                        <a href="@href" style="color:gray;text-decoration-line:none;" onmouseover="this.style.color = '#5b9bd1'; this.style.textDecoration = 'none'" onmouseout="    this.style.color = 'gray';">
                                            @item.K_Resources_name
                                        </a>
                                    </span>
                                    <span class="pull-right">
                                        <i class="fa fa-eye"></i>
                                    </span>
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>