@{
    Layout = null;
}
<!-- BEGIN PAGE HEADER-->
@{Html.RenderAction("ReportingContentPageHead");}
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box green-meadow">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-user"></i>案件报表
                </div>

            </div>
            <div class="portlet-body">
                <div id="loan_search" class="row">
                    @Html.Hidden("isExecutedSearch", "0")


                    <div class="col-md-12">
                        <div class="col-md-1">
                            <div class="btn-group pull-left">
                                <div class="btn-group">
                                    <button type="button" class="btn green" onclick="downExl()">导出</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-1" style="margin-bottom:8px">
                            <button type="button" class="btn green" onclick="TbService()"><span id="tbmsg">同步数据</span></button>
                        </div>
                    </div>
                    <div class="col-md-12">

                        <div class="col-md-2">
                            <div class="form-group">
                                案号：<input name="s_number" id="s_number" type="text" class="form-control input-small input-inline">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                项目名称：<input name="s_title" id="s_title" type="text" class="form-control input-small input-inline">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                案件类型：
                                <select id="i_state" name="i_state" class="table-group-action-input form-control input-inline input-small">
                                    <option value="-1">请选择...</option>

                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                案件阶段：
                                <select id="i_state_type" name="i_state_type" class="table-group-action-input form-control input-inline input-small">
                                    <option value="-1">请选择...</option>

                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                是否预警：
                                <select id="i_state_type" name="i_state_type" class="table-group-action-input form-control input-inline input-small">
                                    <option value="-1">请选择...</option>

                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                是否结案：
                                <select id="i_state_type" name="i_state_type" class="table-group-action-input form-control input-inline input-small">
                                    <option value="-1">请选择...</option>

                                </select>

                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                移交时间：
                                <select id="i_state_type" name="i_state_type" class="table-group-action-input form-control input-inline input-small">
                                    <option value="-1">请选择...</option>

                                </select>
                                至
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">

                                <select id="i_state_type" name="i_state_type" class="table-group-action-input form-control input-inline input-small">
                                    <option value="-1">请选择...</option>

                                </select>

                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                移交金额：<input name="s_title" id="s_title" type="text" class="form-control input-small input-inline">    至
                            </div>

                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <input name="s_title" id="s_title" type="text" class="form-control input-small input-inline">
                            </div>
                        </div>

                        <div class="col-md-1">
                            <div class="btn-group pull-right">
                                <div class="btn-group">
                                    <button class="btn green" onclick="executeSearch('loanList', 'loan_search')">
                                        查询<i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <table class="table table-striped table-bordered table-hover" id="loanList">


                <thead>
                   
                    <tr>
                        <th>年份</th>
                        <th>月份</th>
                        <th>地区</th>
                       
                        <th>主办/独立律师</th>
                        <th>协办/助理律师</th>
                        <th>案号</th>
                        <th>原告</th>
                        <th>被告</th>

                        <th>项目</th>
                        <th>收案时间</th>
                        <th>移交标的</th>
                        <th>预期收入</th>
                        <th>管辖法院</th>



                        <th>本月案件进展</th>
                        <th>进展完成时间</th>
                        <th>保全状态</th>
                        <th>生效状态</th>

                        <th>文书收入</th>
                  




                    </tr>
                </thead>
                <tbody>
                    <!--数据行在这里-->
                </tbody>
            </table>
        </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
</div>


<!-- END PAGE CONTENT-->
<script type="text/javascript" src="/theme/oajs/bar.js"></script>
<!-- BEGIN MAIN JS -->
<script>
    var defaultColumns = [
    { "sName": "Year" },
    { "sName": "Month" },
    { "sName": "AreaName" },
    { "sName": "HostName" },
    { "sName": "CoName" },
    { "sName": "Case_Number" },
    { "sName": "B_Plaintiff_Name" },
    { "sName": "B_Defendant_Name" },
    { "sName": "B_Project_Name" },
    { "sName": "AcceptanceTime" },
    { "sName": "B_TransferPrice" },
    { "sName": "B_ExpectedPrice" },
    { "sName": "JurisdictionCourt" },
    { "sName": "ProgressCompletionTime" },
    { "sName": "PreservationState" },
    { "sName": "EffectiveState" },
    { "sName": "DocumentIncome" },
               

    ];//table 默认列扩展

    var submitUrl = '/Reporting/R_LitigationCase_Reporting/AjaxList';//数据获取地址

    TableManaged.init('loanList', "loan_search", defaultColumns, submitUrl);//用table id,table search id,默认列 初始化table对象

    function TbService() {
        if ($("#tbmsg").text() != "同步数据") {
            alert("数据同步中，请勿重复点击...");
            return;
        }

        $("#tbmsg").text("同步中...");

        $.ajax({
            type: 'POST',
            url: "/Reporting/R_LitigationCase_Reporting/TbService",
            cache: false,
            success: function (result) {
                alert(result);
                $("#tbmsg").text("同步数据");
            }
        });
    }

    function downExl() {


        window.location.href = '/Reporting/R_LitigationCase_Reporting/Export';

    }
</script>
<!-- END MAIN JS -->
