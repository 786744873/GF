@using CommonService.Model.SysManager;
@model IEnumerable<CommonService.Model.C_Region>
@{
    Layout = "~/Views/Shared/_NoPageListTemplate.cshtml";//无分页列表页面固定模板
}
@{
    ViewBag.Title = "区域列表";
}
@section HeadScript{
    <script type="text/javascript">
        $(function () {
            $("table.tablelist tr").each(function () {//slice(1)表示排除第一行
                var p = this;
                $(this).children().slice(1).click(function () {
                    $($(p).children()[0]).children().each(function () {//$(p).children()[0]表示第一列
                        if (this.type == "checkbox") {
                            if (!this.checked) this.checked = true;
                            else this.checked = false;
                        }
                    });
                });
            });
        })
    </script>
}
<table class="tablelist">
    <tbody>
        @foreach (var item in Model)
        {
            <tr target="sid_Iterm" rel="@item.C_Region_code">
                @if (item.C_Region_isRelated)
                {
                    <td><input operate="operate" type="checkbox" checked value=""></td>
                }
                else
                {
                    <td><input operate="operate" type="checkbox" value=""></td>
                }                
                <td>@item.C_Region_name</td>
            </tr>
        }
    </tbody>
</table>
