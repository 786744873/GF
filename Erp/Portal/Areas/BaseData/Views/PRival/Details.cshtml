@using CommonService.Model;

@model CommonService.Model.C_PRival
@{
    Layout = "~/Views/Shared/_ViewPanelTemplate.cshtml";//普通Panel页面固定模板
}
@{
    ViewBag.Title = "个人基本信息";
}

<div class="formbody">
    <ul class="forminfo">
        <div class="mulitytext"><label>姓名：</label><span>@Model.C_PRival_name</span></div>
        <div class="mulitytext"><label>性别：</label><span>@(Model.C_PRival_sex==1 ? "男" : "女")</span></div>
        <div class="mulitytext"><label>出生年月：</label><span>@(Model.C_PRival_birthday==null ? "" : Model.C_PRival_birthday.Value.ToString("yyyy-MM-dd"))</span></div>
        <div class="mulitytext"><label>民族：</label><span>@Model.C_PRival_nation_name</span></div>
        <div class="mulitytext"><label>籍贯：</label><span>@Model.C_PRival_hometown</span></div>
        <div class="mulitytext"><label>政治面貌：</label><span>@Model.C_PRival_pa_name</span></div>
        <div class="mulitytext"><label>住址：</label><span>@Model.C_PRival_address</span></div>
        <div class="mulitytext"><label>身份证号：</label><span>@Model.C_PRival_cnumber</span></div>
        <div class="mulitytext"><label>联系电话：</label><span>@Model.C_PRival_phone</span></div>
        <div class="mulitytext"><label>性格特征：</label><span>@Model.C_PRival_traits</span></div>
        <div class="mulitytext"><label>兴趣爱好：</label><span>@Model.C_PRival_hobby</span></div>
        <div class="mulitytext"><label>区域：</label><span>@Model.C_PRival_region_name</span></div>
    </ul>
</div>

