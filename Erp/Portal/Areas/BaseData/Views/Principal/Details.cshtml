@using CommonService.Model;

@model CommonService.Model.C_Principal
@{
    Layout = "~/Views/Shared/_ViewPanelTemplate.cshtml";//普通Panel页面固定模板
}
@{
    ViewBag.Title = "委托人基本信息";
}
@{
    CommonService.Model.C_Parameters PrincipalType = ViewBag.PrincipalType;
    CommonService.Model.C_Parameters Industry = ViewBag.Industry;
    CommonService.Model.C_Parameters PrincipalSource = ViewBag.PrincipalSource;
    CommonService.Model.C_Parameters PrincipalLevel = ViewBag.PrincipalLevel;
    CommonService.Model.C_Parameters IsSignedState = ViewBag.IsSignedState;
    CommonService.Model.C_Parameters SignedState = ViewBag.SignedState;
    CommonService.Model.C_Parameters PrincipalLoyalty = ViewBag.PrincipalLoyalty;
}

<div class="formbody">
    <ul class="forminfo">
        <div class="mulitytext"><label>委托人名称：</label><span>@Model.C_Principal_name</span></div>
        <div class="mulitytext"><label>委托人类型：</label><span>@PrincipalType.C_Parameters_name</span></div>
        <div class="mulitytext"><label>区域：</label></div>
        <div class="mulitytext"><label>行业：</label></div>
        <div class="mulitytext"><label>年营业额：</label><span>@Model.C_Principal_yearTurnover</span></div>
        <div class="mulitytext"><label>公司规模：</label><span>@Model.C_Principal_companySize</span></div>
        <div class="mulitytext"><label>委托人来源：</label><span>@PrincipalSource.C_Parameters_name</span></div>
        <div class="mulitytext"><label>委托人级别：</label><span>@PrincipalLevel.C_Parameters_name</span></div>
        <div class="mulitytext"><label>电话：</label><span>@Model.C_Principal_tel</span></div>
        <div class="mulitytext"><label>传真：</label><span>@Model.C_Principal_fax</span></div>
        <div class="mulitytext"><label>委托人简称：</label><span>@Model.C_Principal_shortName</span></div>
        <div class="mulitytext"><label>Email：</label><span>@Model.C_Principal_email</span></div>
        <div class="mulitytext"><label>联系人电话：</label><span>@Model.C_Principal_mainContactPhone</span></div>
        <div class="mulitytext"><label>是否签约委托人：</label><span>@IsSignedState.C_Parameters_name</span></div>
        <div class="mulitytextlonger"><label>营业地址：</label><span>@Model.C_Principal_address</span></div>
        <div class="mulitytext"><label>签约委托人状态：</label><span>@SignedState.C_Parameters_name</span></div>
        <div class="mulitytext"><label>专业顾问：</label><span>@Html.Hidden("mainLawyerlookup.Code", Model.C_Principal_consultant, new { mulitylookupgroup = "mainLawyerlookup" }) @Html.Label("mainLawyerlookup.Name", Model.C_principal_consultant_name)</span></div>
        <div class="mulitytext"><label>联系人：</label><span>@Model.C_Principal_contacter</span></div>
        <div class="mulitytext"><label>公司网址：</label><span>@Model.C_Principal_website</span></div>
        <div class="mulitytext"><label>最后接触日期：</label><span>@(Model.C_Principal_lastContactDate == null ? "" : Model.C_Principal_lastContactDate.Value.ToString("yyyy-MM-dd"))</span></div>
        <div class="mulitytext"><label>负责部门：</label><span>@Html.Hidden("responsibleDeptlookup.Code", Model.C_Principal_responsibleDept, new { mulitylookupgroup = "responsibleDeptlookup" }) @Html.Label("responsibleDeptlookup.Name", Model.C_principal_responsibledept_name) @*@Model.C_Principal_responsibleDept*@</span></div>
        <div class="mulitytext"><label>委托人价值：</label><span>@Model.C_Principal_value</span></div>
        <div class="mulitytext"><label>委托人忠诚度：</label><span>@PrincipalLoyalty.C_Parameters_name</span></div>
        <div class="mulitytextlonger"><label>备注：</label><span>@Model.C_principal_remark</span></div>
    </ul>
</div>

