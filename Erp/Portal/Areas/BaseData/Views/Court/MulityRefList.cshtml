    Layout = "~/Views/Shared/_NoPageListTemplate.cshtml";//带表单查询的列表页面固定模板
}
@{
    ViewBag.Title = "法院列表";
}
@{
    //C_Court couConditon = ViewBag.CouConditon;//法院条件模型
