@using CommonService.Model;
@model IEnumerable<CommonService.Model.C_CRival_person>
@{
    Layout = "~/Views/Shared/_ListSearchWithDialogTemplate.cshtml";//带表单查询的列表页面固定模板
}
@{
    ViewBag.Title = "企业负责人信息";
}

@{
    C_CRival_person crConditon = ViewBag.CrConditon;//公司企业负责人条件模型
}
<div class="tools">
    <ul class="toolbar">
        <li><a target="popdialog" title="企业负责人信息" dialogwidth="900" dialogheight="350" href="/basedata/CRival_person/create?C_CRival_code=@crConditon.C_CRival_code"><span><img src="/theme/images/new_add.png" /></span>添加</a></li>
        <li><a target="popdialog" title="企业负责人信息" dialogwidth="900" dialogheight="350" edit="edit" href="/basedata/CRival_person/edit?crival_personID={sid_Iterm}"><span><img src="/theme/images/new_edit.png" /></span>修改</a></li>
        <li><a target="ajaxtodo" title="确认要删除选中数据吗?" singleoperate="singleoperate" href="/basedata/CRival_person/delete?crival_personID={sid_Iterm}"><span><img src="/theme/images/new_delete.png" /></span>删除</a></li>
    </ul>
</div>

<table class="tablelist">
    <thead>
        <tr>
            <th>姓名</th>
            <th>性别</th>
            <th>出生年月</th>
            <th>任职时间</th>
            <th>联系方式</th>
            <th>职务</th>
            <th>其他负责人</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr target="sid_Iterm" rel="@item.C_CRival_person_id" relname="@item.C_CRival_person_name">
                <td>@item.C_CRival_person_name</td>
                <td>@(item.C_CRival_person_sex == 1 ? "男" : "女")</td>
                <td>@item.C_CRival_person_birthday</td>
                <td>@(item.C_CRival_person_ptime == null ? "" : item.C_CRival_person_ptime.Value.ToString("yyyy-MM-dd"))</td>
                <td>@item.C_CRival_person_contact</td>
                <td>@item.C_CRival_person_post</td>
                <td>@item.C_CRival_person_other_person</td>
            </tr>
        }
    </tbody>
</table>