@using CommonService.Model;

@model CommonService.Model.C_Contacts
@{
    Layout = "~/Views/Shared/_ViewPanelTemplate.cshtml";//普通Panel页面固定模板
}
@{
    ViewBag.Title = "联系人基本信息";
}
@{
    CommonService.Model.C_Parameters nation = ViewBag.Contacts_nation;
    CommonService.Model.C_Parameters political = ViewBag.Contacts_political;
}

<div class="formbody">
    <ul class="forminfo">
        <div class="mulitytext"><label>联系人名称：</label><span>@Model.C_Contacts_name</span></div>
        <div class="mulitytext"><label>是否主联系人：</label><span>@(Model.C_Contacts_is_main == 1 ? "是" : "否")</span></div>
        <div class="mulitytext"><label>职务：</label><span>@Model.C_Contacts_post</span></div>
        <div class="mulitytext"><label>性别：</label><span>@(Model.C_Contacts_sex == 1 ? "男" : "女")</span></div>
        <div class="mulitytext"><label>办公电话：</label><span>@Model.C_Contacts_phone</span></div>
        <div class="mulitytext"><label>联系人角色：</label><span>@Model.C_Contacts_role</span></div>
        <div class="mulitytext"><label>联系人手机：</label><span>@Model.C_Contacts_mobile</span></div>
        <div class="mulitytext"><label>联系人电子邮箱：</label><span>@Model.C_Contacts_email</span></div>
        <div class="mulitytext"><label>籍贯：</label><span>@Model.C_Contacts_hometown</span></div>
        <div class="mulitytext"><label>出生日期：</label><span>@(Model.C_Contacts_birthday == null ? "" : Model.C_Contacts_birthday.Value.ToString("yyyy-MM-dd"))</span></div>
        <div class="mulitytext"><label>民族：</label><span>@(nation == null ? "" : nation.C_Parameters_name)</span></div>
        <div class="mulitytext"><label>政治面貌：</label><span>@(political==null?"":political.C_Parameters_name)</span></div>
        <div class="mulitytext"><label>住址：</label><span>@Model.C_Contacts_address</span></div>
        <div class="mulitytext"><label>身份证号：</label><span>@Model.C_Contacts_id_number</span></div>
        <div class="mulitytext"><label>性格特征：</label><span>@Model.C_Contacts_character</span></div>
        <div class="mulitytext"><label>兴趣爱好：</label><span>@Model.C_Contacts_hobby</span></div>
    </ul>
</div>