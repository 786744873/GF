    <!-- END PAGE LEVEL SCRIPTS -->
    <script>
        jQuery(document).ready(function () {
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            Login.init();
            Demo.init();
            // init background slide images
            $.backstretch([
             "/theme/assets/admin/pages/media/bg/1.jpg",
             "/theme/assets/admin/pages/media/bg/2.jpg",
             "/theme/assets/admin/pages/media/bg/3.jpg",
             "/theme/assets/admin/pages/media/bg/4.jpg"
            ], {
                fade: 1000,
                duration: 8000
            }
         );
        });

        function kmsSignIn() {
            var userName = $.trim($("#userName").val());
            var password = $.trim($("#password").val());
            var remberPwd = $("#remberPwd").attr("checked") == "checked" ? "1" : "0"; //记住密码
            if (userName == '') {
                $("#userName").focus();
                $("#userNameError").html('请输入登录名');
                return false;
            }
            if (password == '') {
                $("#password").focus();
                $("#passwordError").html('请输入密码');
                return false;
            }
            $.ajax({
                type: "POST",
                url: "/Account/KmsSignIn",
                data: "{ loginName : '" + userName + "',password : '" + password + "',remberPwd:'" + remberPwd + "'}",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                error: function () {
                    alert('服务器繁忙，请稍后再试!');
                },
                success: function (json) {
                    $("#userNameError").html("");
                    $("#passwordError").html("");
                    if (json == '-1') {
                        $("#userName").val('');
                        $("#userName").focus();
                        $("#userNameError").html('您输入的登录名错误');
                    } else if (json == '-2') {
                        $("#password").val('');
                        $("#password").focus();
                        $("#passwordError").html('您输入的密码错误');
                    } else if (json == '-3') {
                        $("#userName").val('');
                        $("#userName").focus();
                        $("#userNameError").html('您输入的登录用户已被管理员删除');
                        $("#password").val('');
                    } else if (json == '-4') {
                        $("#userName").val('');
                        $("#userName").focus();
                        $("#userNameError").html('您输入的登录用户未启用');
                        $("#password").val('');
                    } else if (json == '-5') {
                        $("#userName").val('');
                        $("#userName").focus();
                        $("#userNameError").html('您输入的登录用户已被管理员禁用');
                        $("#password").val('');
                    } else if (json == '1') {
                        window.location.href = "/home/kmsdefault";//登录成功
                    }
                }
            });
            return false;
        }

        document.onkeyup = function (e) {      //onkeyup是javascript的一个事件、当按下某个键弹起 var _key; //的时触发 
            if (e == null) { // ie  
                _key = event.keyCode;
            } else { // firefox              //获取你按下键的keyCode  
                _key = e.which;          //每个键的keyCode是不一样的  
            }

            if (_key == 13) {   //判断keyCode是否是13，也就是回车键(回车的keyCode是13)  
                kmsSignIn();
            }
        }
    </script>
    <!-- END JAVASCRIPTS -->
