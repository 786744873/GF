@{
    Layout = null;
}
<!-- BEGIN PAGE HEADER-->
@{Html.RenderAction("ReportingContentPageHead");}
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<input type="hidden" value="@ViewBag.Result" id="hidValue" />
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN CHART PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-bar-chart font-green-haze"></i>
                    <span class="caption-subject bold uppercase font-green-haze">案件统计</span>
                    <span class="caption-helper">统计结果显示</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="fullscreen">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div id="chart_2" class="chart" style="height: 400px;">
                </div>
            </div>
        </div>
        <!-- END CHART PORTLET-->
    </div>
</div>

<script>
    var initChartSample2 = function () {
        var obj = eval('(' + $("#hidValue").val() + ')');
        var chart = AmCharts.makeChart("chart_2", {
            "type": "serial",
            "theme": "light",

            "fontFamily": 'Open Sans',
            "color": '#888888',

            "legend": {
                "equalWidths": false,
                "useGraphSettings": true,
                "valueAlign": "left",
                "valueWidth": 120
            },
            "dataProvider": obj,
            "valueAxes": [{
                "id": "distanceAxis",
                "axisAlpha": 0,
                "gridAlpha": 0,
                "position": "left",
                "title": "案件数量（个）"
            }, {
                "id": "durationAxis",
                "axisAlpha": 0,
                "gridAlpha": 0,

                "labelsEnabled": true,
                "position": "right",
                "title": "金额（元）"
            }],
            "graphs": [{
                "alphaField": "alpha",
                "balloonText": "[[value]] 个",
                "dashLengthField": "dashLength",
                "fillAlphas": 0.7,
                "legendPeriodValueText": "总数: [[value.sum]] 个",
                "legendValueText": "[[value]] 个",
                "title": "案件",
                "type": "column",
                "valueField": "distance",
                "valueAxis": "distanceAxis"
            }, {
                "balloonText": "移交标的:[[value]]元",
                "bullet": "round",
                "bulletBorderAlpha": 1,
                "useLineColorForBulletBorder": true,
                "bulletColor": "#FFFFFF",
                "bulletSizeField": "townSize",
                "dashLengthField": "dashLength",
                "descriptionField": "townName",
                "labelPosition": "right",
                "labelText": "[[townName2]]",
                "legendPeriodValueText": "总额: [[value.sum]] 元",
                "legendValueText": "[[value]] 元",
                "title": "移交标的",
                "fillAlphas": 0,
                "valueField": "移交标的",
                "valueAxis": "durationAxis"
            }, {
                "balloonText": "预期收益:[[value]]元",
                "bullet": "square",
                "bulletBorderAlpha": 1,
                "bulletBorderThickness": 1,
                "dashLengthField": "dashLength",
                "legendPeriodValueText": "总额: [[value.sum]] 元",
                "legendValueText": "[[value]] 元",
                "title": "预期收益",
                "fillAlphas": 0,
                "valueField": "预期收益",
                "valueAxis": "durationAxis"
            }],
            "chartCursor": {
                "categoryBalloonDateFormat": "MM",
                "cursorAlpha": 0.1,
                "cursorColor": "#000000",
                "fullWidth": true,
                "valueBalloonsEnabled": false,
                "zoomable": false
            },
            "categoryField": "date",
            "categoryAxis": {
                "gridPosition": "start",
                "axisAlpha": 0,
                "tickLength": 0
            },
            "exportConfig": {
                "menuBottom": "20px",
                "menuRight": "22px",
                "menuItems": [{
                    "icon": Metronic.getGlobalPluginsPath() + "amcharts/amcharts/images/export.png",
                    "format": 'png'
                }]
            }
        });

        $('#chart_2').closest('.portlet').find('.fullscreen').click(function () {
            chart.invalidateSize();
        });
    }
    initChartSample2();
    //ChartsAmcharts.init(); // init demo charts
</script>