
@{
    Layout = null;
}
@{
    List<CommonService.Model.C_Parameters> ResourcesState = ViewBag.ResourcesState;//资源状态
    List<CommonService.Model.C_Parameters> ResourcesType = ViewBag.ResourcesType;//资源类型
}

<div class="margin-top-10">
    <div class="col-md-12">
        <ul class="mix-filter col-md-9" id="myShareResourcesState">
            状态：
            <li class="filter active" id="">
                不限
            </li>
            @foreach (var item in ResourcesState)
            {
                <li class="filter" id="@item.C_Parameters_id">
                     @item.C_Parameters_name
                </li>
            }
        </ul>
        <div class="btn-group pull-left col-md-3">
            <button type="button" class="btn yellow-gold dropdown-toggle btn-block" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true" aria-expanded="false">
                分享知识 <i class="fa fa-angle-down"></i>
            </button>
            <ul class="dropdown-menu btn-block" role="menu">
                <li class="text-center">
                    <a href="/kms/Resources/Upload?resourceesCode=">
                        上传文档
                    </a>
                </li>
                <li class="text-center">
                    <a href="/kms/Avi/create">
                        上传视频
                    </a>
                </li>
                <li class="text-center">
                    <a href="/kms/Article/create">
                        分享文章
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-md-12">
        <ul class="mix-filter col-md-9" id="myShareResourcesType">
            类型：
            <li class="filter active" id="">
                不限
            </li>
            <li class="filter" id="1">
                文档
            </li>
            @foreach (var item in ResourcesType)
            {
                if(item.C_Parameters_id==825 || item.C_Parameters_id==827 || item.C_Parameters_id==829)
                { 
                    <li class="filter" id="@item.C_Parameters_id">
                        @item.C_Parameters_name
                    </li>
                }
            }
        </ul>
        <div class="col-md-3">
            <div id="MyShareDocumentslist_search2" class="row">
                @Html.Hidden("isExecutedSearch", "0")
                @Html.Hidden("shareResourcesState")
                @Html.Hidden("shareResourcesType")
                <div class="col-md-12">
                    <div class="input-group">
                        <input name="s_title" id="s_title" type="text" style="float:right;margin-left:10px;" class="form-control" placeholder="资源名称">
                        <span class="input-group-btn">
                            <button id="shareBtn" class="btn blue" type="button" onclick="executeSearch('MyShareDocumentslist', 'MyShareDocumentslist_search2')"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="portlet box ">
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover margin-top-10" id="MyShareDocumentslist">
                <thead>
                    <tr class="bg-grey">
                        <th class="text-center">资源Guid</th>
                        <th class="text-center">资源类型</th>
                        <th class="text-center">资源Url</th>
                        <th class="text-center">标题</th>
                        <th class="text-center">类型</th>
                        <th class="text-center">所属分类</th>
                        <th class="text-center">审核状态</th>
                        <th class="text-center">资料情况</th>
                        <th class="text-center" style="width:15%;">操作</th>
                    </tr>
                </thead>
                <tbody>
                    <!--数据行在这里-->
                </tbody>
            </table>
        </div>
    </div>
</div>


