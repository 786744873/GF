@using CommonService.Model.SysManager;
@model IEnumerable<CommonService.Model.SysManager.C_Menu_buttons>
@{
    Layout = "~/Views/Shared/_ListSearchWithDialogTemplate.cshtml";//带表单查询的列表页面固定模板
}
@{
    ViewBag.Title = "菜单按钮列表";
}

@{
    C_Menu_buttons butConditon = ViewBag.ButConditon;//菜单按钮条件模型
}
<div class="tools">
    <ul class="toolbar">
        <li><a target="popdialog" title="菜单按钮" dialogwidth="800" dialogheight="500" href="/sysmanager/menu_buttons/create?menuId=@butConditon.C_Menu_id"><span><img src="/theme/images/new_add.png" /></span>添加</a></li>
        <li><a target="popdialog" title="菜单按钮" dialogwidth="800" dialogheight="500" edit="edit" href="/sysmanager/menu_buttons/edit?menu_buttonsId={sid_Iterm}"><span><img src="/theme/images/new_edit.png" /></span>修改</a></li>
        <li><a target="ajaxtodo" title="确认要删除选中数据吗?" singleoperate="singleoperate" href="/sysmanager/menu_buttons/delete?menu_buttonsId={sid_Iterm}"><span><img src="/theme/images/new_delete.png" /></span>删除</a></li>
    </ul>
</div>

<table class="tablelist">
    <thead>
        <tr>
            <th>按钮名称</th>
            <th>所属菜单</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr target="sid_Iterm" rel="@item.C_Menu_buttons_id">
                <td>@item.C_Menu_buttons_name</td>
                <td>@item.C_Menu_id</td>
            </tr>
        }
    </tbody>
</table>    