@model CommonService.Model.OA.O_Schedule
@{
    Layout = null;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">日程详细</h4>
</div>
<div class="modal-body">
    <div class="portlet-body">
        <div class="row static-info">
            <div class="col-md-2 name">
                日程标题:
            </div>
            <div class="col-md-10">
                @Model.O_Schedule_title
            </div>
        </div>
        <div class="row static-info">
            <div class="col-md-2 name">
                日程内容:
            </div>
            <div class="col-md-10">
                @Html.Raw(Model.O_Schedule_content)
            </div>
        </div>
        <div class="row static-info">
            <div class="col-md-2 name">
                开始日期:
            </div>
            <div class="col-md-10">
                @if (Model.O_Schedule_isAllDay)
                {
                    @Model.O_Schedule_startTime.Value.ToString("yyyy-MM-dd")
                }
                else
                {
                    @Model.O_Schedule_startTime.Value.ToString("yyyy-MM-dd HH:mm")
                }
            </div>
        </div>
        <div class="row static-info">
            <div class="col-md-2 name">
                结束日期:
            </div>
            <div class="col-md-10">
                @if (Model.O_Schedule_isAllDay)
                {
                    @Model.O_Schedule_endTime.Value.ToString("yyyy-MM-dd")
                }
                else
                {
                    @Model.O_Schedule_endTime.Value.ToString("yyyy-MM-dd HH:mm")
                }

            </div>
        </div>
        <div class="row static-info">
            <div class="col-md-2 name">
                提醒类型:
            </div>
            <div class="col-md-10">
                @Model.O_Schedule_remindTypename
            </div>
        </div>
        @if (Model.O_Schedule_isRepeat)
        {
            @*<div class="row static-info">
                    <div class="col-md-2 name">
                        重复类型:
                    </div>
                    <div class="col-md-10 value">
                        @Model.O_Schedule_repeatTypename
                    </div>
                </div>
                <div class="row static-info">
                    <div class="col-md-2 name">
                        结束条件:
                    </div>
                    <div class="col-md-10 value">
                        @Model.O_Schedule_endConditionname
                    </div>
                </div>
                if (Model.O_Schedule_endRepeatDate != null)
                {
                  <div class="row static-info">
                    <div class="col-md-2 name">
                        结束重复日期:
                    </div>
                    <div class="col-md-10 value">
                        @Model.O_Schedule_endRepeatDate.Value.ToString("yyyy-MM-dd")
                    </div>
                  </div>
                }*@
        }
        <div class="row static-info">
            <div class="col-md-2 name">
                参与人:
            </div>
            <div class="col-md-10">
                @Model.C_Userinfo_name
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn ajaxify" href="/oa/myarticle/List">
        返回
    </a>
</div>