@{
    CommonService.Model.CustomerForm.F_FormProperty formPropertyValue = ViewBag.FormPropertyValue;//表单属性值数据实体
    string htmlAttributes = ViewBag.HtmlAttributes;//验证信息
    string lookupgroup = formPropertyValue.F_FormProperty_fieldName + "mulityeditlookup";
    string hdId = lookupgroup + "_Code_formproperty_" + formPropertyValue.V_FormPropertyValue_Code + "_655";//多选弹出文本框
    string hdName = lookupgroup + ".Code_formproperty_" + formPropertyValue.V_FormPropertyValue_Code + "_655";
    string showId = lookupgroup + "_Name_formproperty_" + formPropertyValue.V_FormPropertyValue_Code + "_655";
    string showName = lookupgroup + ".Name_formproperty_" + formPropertyValue.V_FormPropertyValue_Code + "_655";
    string title = formPropertyValue.F_FormProperty_showName;
    string switchUrl = formPropertyValue.F_FormProperty_targetUrl;
    if (switchUrl.Contains("?"))
    {
        switchUrl = switchUrl + "&lookupgroup=" + lookupgroup + "&propertyValueCode=" + formPropertyValue.V_FormPropertyValue_Code;
    }
    else
    {
        switchUrl = switchUrl + "?lookupgroup=" + lookupgroup + "&propertyValueCode=" + formPropertyValue.V_FormPropertyValue_Code;
    }
}
@{
    //处理属性值
    string key = String.Empty;
    string value = String.Empty;
    string propertyValue = formPropertyValue.V_FormPropertyValue_Value;
    if (propertyValue.Contains('&'))
    {
        string[] propertyValueGroup = propertyValue.Split('&');
        key=propertyValueGroup[0];
        value=propertyValueGroup[1];
    }
   
}
<input id="@hdId" name="@hdName" mulityeditlookupgroup="@lookupgroup" type="hidden" value="@key">
<input id="@showId" name="@showName" mulityeditlookupgroup="@lookupgroup" type="text" @htmlAttributes class="textselect" title="@title" dialogheight="500" dialogwidth="880" selectdialog="selectdialog" switchurl="@switchUrl" value="@value">
