@using CommonService.Model.SysManager;
@model IEnumerable<CommonService.Model.SysManager.C_Userinfo>
@{
    Layout = "~/Views/Shared/_ListSearchTemplate.cshtml";//普通列表页面固定模板
}
@{
    ViewBag.Title = "律师列表";
}
@section HeadScript{
    <script type="text/javascript">
    </script>
}
@{
    C_Userinfo Conditon = ViewBag.UserConditon;
}
<div class="tools">
    @using (Html.BeginForm("CourtRelationLawyer", "Court_Lawyer", FormMethod.Post, new { id = ViewBag.SearchFormID, onsubmit = "return clickSearch(this);" }))
    {
        <ul class="seachform">
            <input name="ThisPageIndex" class="ThisPageIndex" type="hidden" value="@ViewBag.ThisPageIndex" />
            <input name="IsExcutedFormSearch" class="IsExcutedFormSearch" type="hidden" value="@ViewBag.IsExcutedFormSearch" />
            @Html.Hidden("C_Userinfo_relationCode", Conditon.C_Userinfo_relationCode)
            <li><label>律师名称</label>@Html.TextBox("C_Userinfo_name", Conditon.C_Userinfo_name, new { @class = "scinput" })</li>
            <li><label>&nbsp;</label><input type="submit" class="scbtn" value="查询" /></li>
        </ul>
    }
</div>

<table class="tablelist">
    <thead>
        <tr>
            <th>律师名称</th>
            <th>所属组织架构</th>
            <th>岗位</th>
            <th>描述</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr target="sid_Iterm" rel="@item.C_Userinfo_code">
               <td>@item.C_Userinfo_name</td>
                <td>@item.C_Userinfo_Organization_name</td>
                <td>@item.C_Userinfo_post_name</td>
                <td>@item.C_Userinfo_description</td>
            </tr>
        }
    </tbody>
</table>    