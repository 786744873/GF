@using CommonService.Model;

@model CommonService.Model.C_Property_trail_estate
@{
    Layout = "~/Views/Shared/_EditDialogFormTemplate.cshtml";//带表单提交的编辑页面固定模板
}
@{
    ViewBag.Title = "房产信息";
}
@section HeadScript{
    <script type="text/javascript">
        document.onkeyup = function (e) {      //onkeyup是javascript的一个事件、当按下某个键弹起 var _key; //的时触发 
            if (e == null) { // ie  
                _key = event.keyCode;
            } else { // firefox              //获取你按下键的keyCode  
                _key = e.which;          //每个键的keyCode是不一样的  
            }
            if (_key == 13) {   //判断keyCode是否是13，也就是回车键(回车的keyCode是13)  
                onlySaveForm(document.getElementById('btnSave'));
            }
        }
    </script>
}
<div class="formbody">
    <div class="formtitle"><span>基本信息</span></div>
    <ul class="forminfo">
        @using (Html.BeginForm("Save", "Property_trail_estate", FormMethod.Post, new { id = "formProperty_trail_estate", onsubmit = "return validateCallback(this,dialogAjaxDone);" }))
        {
            @Html.Hidden("formOperateType")//表单操作类型：固定写法，只是保存，值为'onlySave';保存并且新增，值为'saveAndNewNext'
            @Html.Hidden("C_Property_trail_estate_id", Model.C_Property_trail_estate_id)
            @Html.Hidden("C_Property_trail_estate_type", Model.C_Property_trail_estate_type)
            @Html.Hidden("C_Property_trail_estate_belongs", Model.C_Property_trail_estate_belongs)
            @Html.Hidden("C_Property_trail_estate_code", Model.C_Property_trail_estate_code)
            @Html.Hidden("C_Property_trail_estate_isDelete", Model.C_Property_trail_estate_isDelete)
            @Html.Hidden("C_Property_trail_estate_creator", Model.C_Property_trail_estate_creator)
            @Html.Hidden("C_Property_trail_estate_createTime", Model.C_Property_trail_estate_createTime)
            <li><label>房产证号</label>@Html.TextBox("C_Property_trail_estate_license", Model.C_Property_trail_estate_license, new { @class = "dfinput", requiredInput = "请输入房产证号", maxlength = "100" })<i></i></li>
            <li class="buttonWrap clear"><label>&nbsp;</label><input name="" type="button" id="btnSave" onclick="onlySaveForm(this)" class="btn btnmr fl" value="确认保存" /><i></i><input name="" id="btnSaveAndNewNext" type="button" onclick="saveAndNewNext(this)" class="btn btnmr fl" value="保存并新增下一个" /><i></i></li>
        }
    </ul>
</div>