@using CommonService.Model;
@model IEnumerable<CommonService.Model.C_Property_trail_stock>
@{
    Layout = "~/Views/Shared/_ListSearchWithDialogTemplate.cshtml";//带表单查询的列表页面固定模板
}
@{
    ViewBag.Title = "股票信息";
}

@{
    C_Property_trail_stock stockConditon = ViewBag.StockConditon;//对手财产线索股票条件模型
}
<div class="tools">
    <ul class="toolbar">
        <li><a target="popdialog" title="股票信息" dialogwidth="600" dialogheight="300" href="/basedata/Property_trail_stock/create?property_trail_stock_belongs=@stockConditon.C_Property_trail_stock_belongs&property_trail_stock_type=@stockConditon.C_Property_trail_stock_type"><span><img src="/theme/images/new_add.png" /></span>添加</a></li>
        <li><a target="popdialog" title="股票信息" dialogwidth="600" dialogheight="300" edit="edit" href="/basedata/Property_trail_stock/edit?property_trail_stock_id={sid_Iterm}"><span><img src="/theme/images/new_edit.png" /></span>修改</a></li>
        <li><a target="ajaxtodo" title="确认要删除选中数据吗?" singleoperate="singleoperate" href="/basedata/Property_trail_stock/delete?property_trail_stock_id={sid_Iterm}"><span><img src="/theme/images/new_delete.png" /></span>删除</a></li>

    </ul>
</div>

<table class="tablelist">
    <thead>
        <tr>
            <th>股票公司名称</th>
            <th>股数</th>
            <th>当日股价</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr target="sid_Iterm" rel="@item.C_Property_trail_stock_id">
                <td>@item.C_Property_trail_stock_name</td>
                <td>@item.C_Property_trail_stock_count</td>
                <td>@item.C_Property_trail_stock_price</td>
            </tr>
        }
    </tbody>
</table>