@using CommonService.Model;

@model CommonService.Model.C_Customer
@{
    Layout = "~/Views/Shared/_ViewPanelTemplate.cshtml";//普通Panel页面固定模板
}
@{
    ViewBag.Title = "客户基本信息";
}
@{
    CommonService.Model.C_Parameters CustomerType = ViewBag.CustomerType;
    CommonService.Model.C_Parameters Industry = ViewBag.Industry;
    CommonService.Model.C_Parameters CustomerSource = ViewBag.CustomerSource;
    CommonService.Model.C_Parameters CustomerLevel = ViewBag.CustomerLevel;
    CommonService.Model.C_Parameters IsSignedState = ViewBag.IsSignedState;
    CommonService.Model.C_Parameters SignedState = ViewBag.SignedState;
    CommonService.Model.C_Parameters CustomerLoyalty = ViewBag.CustomerLoyalty;
    CommonService.Model.C_Parameters State = ViewBag.State;
    CommonService.Model.C_Parameters Category = ViewBag.Category;
}

<div class="formbody">
  <ul class="forminfo">
    <div class="mulitytext"><label>客户名称：</label><span>@Model.C_Customer_name</span></div>
    <div class="mulitytext"><label>客户类型：</label><span>@CustomerType.C_Parameters_name</span></div>
      <div class="mulitytext"><label>客户类别：</label><span>@Category.C_Parameters_name</span></div>
      <div class="mulitytext"><label>客户状态：</label><span>@State.C_Parameters_name</span></div>
    <div class="mulitytext"><label>区域：</label></div>
    <div class="mulitytext"><label>行业：</label></div>
    <div class="mulitytext"><label>年营业额：</label><span>@Model.C_Customer_yearTurnover</span></div>
    <div class="mulitytext"><label>公司规模：</label><span>@Model.C_Customer_companySize</span></div>
    <div class="mulitytext"><label>客户来源：</label><span>@CustomerSource.C_Parameters_name</span></div>
    <div class="mulitytext"><label>客户级别：</label><span>@CustomerLevel.C_Parameters_name</span></div>
    <div class="mulitytext"><label>电话：</label><span>@Model.C_Customer_tel</span></div>
    <div class="mulitytext"><label>传真：</label><span>@Model.C_Customer_fax</span></div>
    <div class="mulitytext"><label>客户简称：</label><span>@Model.C_Customer_shortName</span></div>
    <div class="mulitytext"><label>Email：</label><span>@Model.C_Customer_email</span></div>
    <div class="mulitytext"><label>联系人电话：</label><span>@Model.C_Customer_mainContactPhone</span></div>
    <div class="mulitytext"><label>是否签约客户：</label><span>@IsSignedState.C_Parameters_name</span></div>
    <div class="mulitytextlonger"><label>营业地址：</label><span>@Model.C_Customer_address</span></div>
    <div class="mulitytext"><label>签约客户状态：</label><span>@SignedState.C_Parameters_name</span></div>
    <div class="mulitytext"><label>专业顾问：</label><span>@Model.C_Customer_consultant_name</span></div>
    <div class="mulitytext"><label>联系人：</label><span>@Model.C_Customer_contacter</span></div>
    <div class="mulitytext"><label>公司网址：</label><span>@Model.C_Customer_website</span></div>
    <div class="mulitytext"><label>最后接触日期：</label><span>@(Model.C_Customer_lastContactDate==null ? "" : Model.C_Customer_lastContactDate.Value.ToString("yyyy-MM-dd"))</span></div>
    <div class="mulitytext"><label>负责部门：</label><span>@Model.C_Customer_responsibleDept_Name</span></div>
    <div class="mulitytext"><label>客户价值：</label><span>@Model.C_Customer_value</span></div>
    <div class="mulitytext"><label>客户忠诚度：</label><span>@CustomerLoyalty.C_Parameters_name</span></div>
    <div class="mulitytextlonger"><label>备注：</label><span>@Model.C_Customer_remark</span></div>
  </ul>
</div>