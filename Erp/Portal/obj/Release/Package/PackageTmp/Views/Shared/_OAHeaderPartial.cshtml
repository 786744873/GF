@{
    Layout = null;
}
@using Context;
@{
    List<CommonService.Model.OA.O_Email_user> emailList = ViewBag.emailList;
    List<CommonService.Model.OA.O_Schedule> scheduleList = ViewBag.scheduleList;
    List<CommonService.Model.OA.O_Form_AuditFlow> formNoAuditList = ViewBag.formNoAuditList;
}
<!-- BEGIN HEADER INNER -->
<div class="page-header-inner">
    <!-- BEGIN LOGO -->
    <div class="page-logo">
        <a href="/home/oadefault">
            <img src="/theme/assets/admin/layout/img/oa-logo 03.png" width="160px" height="38px" alt="logo" class="logo-default" />
        </a>
        <div class="menu-toggler sidebar-toggler">
        </div>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN RESPONSIVE MENU TOGGLER -->
    <a href="javascript:;" class="menu-toggler responsive-toggler" data-toggle="collapse" data-target=".navbar-collapse">
    </a>
    <!-- END RESPONSIVE MENU TOGGLER -->
    <!-- BEGIN TOP NAVIGATION MENU -->
    <div class="top-menu">
        <ul class="nav navbar-nav pull-right">
            <!-- BEGIN NOTIFICATION DROPDOWN -->
            <!-- DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte -->
            <li class="dropdown dropdown-extended dropdown-notification" id="header_notification_bar">
                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                    <i class="icon-bell"></i>
                    <span class="badge badge-default" id="FormSubCount">
                        @ViewBag.formNoAuditListCount
                    </span>
                </a>
                <ul class="dropdown-menu customer-outer-partial">
                    <li class="external">
                        <h3>你有，<span class="bold" id="FormSubCount2">@ViewBag.formNoAuditListCount</span> 条，新消息</h3>
                        <a class="ajaxify" href="/oa/form/list">查看所有</a>
                    </li>
                    <li>
                        <ul class="dropdown-menu-list scroller" style="height: 250px;" data-handle-color="#637283" id="FormSubList">
                            @foreach (var item in formNoAuditList)
                            {
                                <li id="@item.C_Messages_id">
                                    <a href="/oa/form/layoutroottabs?oFormCode=@item.O_Form_code&msgID=@item.C_Messages_id" class="ajaxify">
                                        <span class="photo">
                                            <img src="/theme/assets/admin/layout3/img/avatar2.jpg" class="img-circle" alt="">
                                        </span>
                                        <span class="subject">
                                            <span class="from">
                                                @item.O_Form_AuditPerson_statusname
                                            </span>
                                            <span class="time">@item.O_Form_AuditFlow_createTime </span>
                                        </span>
                                        <span class="message">
                                            @item.O_Form_AuditPerson_content
                                        </span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                </ul>
            </li>
            <!-- END NOTIFICATION DROPDOWN -->
            <!-- BEGIN INBOX DROPDOWN -->
            <!-- DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte -->
            <li class="dropdown dropdown-extended dropdown-inbox" id="header_inbox_bar">
                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                    <i class="icon-envelope-open"></i>
                    <span class="badge badge-default" id="inboxcount">
                        @ViewBag.emailCount
                    </span>
                </a>
                <ul class="dropdown-menu customer-outer-partial">
                    <li class="external">
                        <h3>你有， <span class="bold" id="emailCount">@ViewBag.emailCount</span>封，新邮件</h3>
                        <a class="ajaxify" href="/oa/email/list">查看所有</a>
                    </li>
                    <li>
                        <ul class="dropdown-menu-list scroller" style="height: 275px;" data-handle-color="#637283" id="emailNoReadList">
                            @foreach (var item in emailList)
                            {
                            <li id="@item.C_Messages_id">
                                <a href="/oa/email/List?emailCode=@item.O_Email_code&msgID=@item.C_Messages_id&Mlist=1" class="ajaxify">
                                    <span class="photo">
                                        <img src="/theme/assets/admin/layout3/img/avatar2.jpg" class="img-circle" alt="">
                                    </span>
                                    <span class="subject">
                                        <span class="from">
                                            @item.C_Userinfo_name
                                        </span>
                                        <span class="time">@item.O_Email_createTime </span>
                                    </span>
                                    <span class="message">
                                        @item.O_Email_title
                                    </span>
                                </a>
                            </li>
                            }
                        </ul>
                    </li>
                </ul>
            </li>
            <!-- END INBOX DROPDOWN -->
            <!-- BEGIN TODO DROPDOWN -->
            <!-- DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte -->
            <li class="dropdown dropdown-extended dropdown-tasks" id="header_task_bar">
                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                    <i class="icon-calendar"></i>
                    <span class="badge badge-default" id="scheduleCount">
                        @ViewBag.scheduleCount
                    </span>
                </a>
                <ul class="dropdown-menu extended tasks customer-outer-partial">
                    <li class="external">
                        <h3>你有， <span class="bold" id="scheduleCount2">@ViewBag.scheduleCount</span> 个，日程提醒</h3>
                        <a class="ajaxify" href="/oa/schedule/defaultlayout">查看所有</a>
                    </li>
                    <li>
                        <ul class="dropdown-menu-list scroller" style="height: 275px;" data-handle-color="#637283" id="scheduleNoReadList">
                            @foreach (var item in scheduleList)
                            {
                                <li id="@item.C_Messages_id">
                                    <a href="/oa/schedule/Details?scheduleCode=@item.O_Schedule_code&msgID=@item.C_Messages_id" class="ajaxify">
                                        <span class="photo">
                                            <img src="/theme/assets/admin/layout3/img/avatar2.jpg" class="img-circle" alt="">
                                        </span>
                                        <span class="subject">
                                            <span class="from">
                                                @item.O_Schedule_title
                                            </span>
                                            <span class="time">@item.O_Schedule_startTime </span>
                                        </span>
                                        <span class="message">
                                            @item.O_Schedule_content
                                        </span>
                                    </a>
                                </li>
                            }

                        </ul>
                    </li>
                </ul>
            </li>
            <!-- END TODO DROPDOWN -->
            <!-- BEGIN USER LOGIN DROPDOWN -->
            <!-- DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte -->
            <li class="dropdown dropdown-user">
                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                    <img alt="" class="img-circle" src="/theme/assets/admin/layout/img/avatar3_small.jpg" />
                    <span class="username username-hide-on-mobile">
                        @UIContext.Current.UserName
                    </span>
                    <i class="fa fa-angle-down"></i>
                </a>
