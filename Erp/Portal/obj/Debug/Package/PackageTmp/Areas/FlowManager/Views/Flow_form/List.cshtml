@using CommonService.Model.FlowManager;
@model IEnumerable<CommonService.Model.FlowManager.P_Flow_form>
@{
    Layout = "~/Views/Shared/_ListSearchWithDialogTemplate.cshtml";//带表单查询的列表页面固定模板
}
@{
    ViewBag.Title = "表单列表";
}

@{
    P_Flow_form flowformConditon = ViewBag.FlowformConditon;//表单条件模型
}
<div class="tools">
    <ul class="toolbar">
        <li><a target="popdialog" title="表单列表" dialogwidth="1100" dialogheight="450" href="/customerform/form/MulityRefList?flowCode=@flowformConditon.P_Flow_code"><span><img src="/theme/images/new_add.png" /></span>分配表单</a></li>
        <li><a target="ajaxtodo" title="确认要删除选中数据吗?" singleoperate="singleoperate" href="/flowmanager/flow_form/delete?Flow_form_id={sid_Iterm}"><span><img src="/theme/images/new_delete.png" /></span>删除</a></li>
        <li><a target="ajaxtodo" title="确认要修改选中数据吗?" mulityoperate="mulityoperate" href="/flowmanager/flow_form/ChangeDefault?flow_form_ids={sid_Iterm}&defaultids=@ViewBag.Defauleids"><span><img src="/theme/images/new_ok.png" /></span>确定</a></li>
    </ul>
</div>
<table class="tablelist">
    <thead>
        <tr>
            <th>是否默认</th>
            <th>流程名称</th>
            <th>表单名称</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr target="sid_Iterm" rel="@item.P_Flow_form_id">
                @if(item.P_Flow_form_isDefault==0)
                {
                    <td><input operate="operate" type="checkbox" checked="checked" value="" ></td>
                }else
                {
                    <td><input operate="operate" type="checkbox" value="" ></td>
                }
                <td>@item.P_Flow_name</td>
                <td>@item.F_Form_chineseName</td>
            </tr>
        }
    </tbody>
</table>
