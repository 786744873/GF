@{
    Layout = null;
}
<!-- BEGIN PAGE HEADER-->
@{Html.RenderAction("ReportingContentPageHead");}
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box green-meadow">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-user"></i>案件报表
                </div>

            </div>
            <div class="portlet-body">
                <div id="loan_search" class="row">
                    @Html.Hidden("isExecutedSearch", "0")


                    <div class="col-md-12">
                        <div class="col-md-1">
                            <div class="btn-group pull-left">
                                <div class="btn-group">
                                    <button type="button" class="btn green" onclick="downExl()">导出</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-1" style="margin-bottom:8px">
                            <button type="button" class="btn green" onclick="TbService()"><span id="tbmsg">同步数据</span></button>
                        </div>
                    </div>
                    <div class="col-md-12">
                       
                            <div class="col-md-2">
                                <div class="form-group">
                                    案号：<input name="s_number" id="s_number" type="text" class="form-control input-small input-inline">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    项目名称：<input name="s_title" id="s_title" type="text" class="form-control input-small input-inline">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    案件类型：
                                    <select id="i_state" name="i_state" class="table-group-action-input form-control input-inline input-small">
                                        <option value="-1">请选择...</option>

                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    案件阶段：
                                    <select id="i_state_type" name="i_state_type" class="table-group-action-input form-control input-inline input-small">
                                        <option value="-1">请选择...</option>

                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    是否预警：
                                    <select id="i_state_type" name="i_state_type" class="table-group-action-input form-control input-inline input-small">
                                        <option value="-1">请选择...</option>

                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    是否结案：
                                    <select id="i_state_type" name="i_state_type" class="table-group-action-input form-control input-inline input-small">
                                        <option value="-1">请选择...</option>

                                    </select>

                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    移交时间：
                                    <select id="i_state_type" name="i_state_type" class="table-group-action-input form-control input-inline input-small">
                                        <option value="-1">请选择...</option>

                                    </select>
                                    至
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">

                                    <select id="i_state_type" name="i_state_type" class="table-group-action-input form-control input-inline input-small">
                                        <option value="-1">请选择...</option>

                                    </select>

                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    移交金额：<input name="s_title" id="s_title" type="text" class="form-control input-small input-inline">    至
                                </div>

                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <input name="s_title" id="s_title" type="text" class="form-control input-small input-inline">
                                </div>
                            </div>

                            <div class="col-md-1">
                                <div class="btn-group pull-right">
                                    <div class="btn-group">
                                        <button class="btn green" onclick="executeSearch('loanList', 'loan_search')">
                                            查询<i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                
                    </div>
                </div>

            </div>
            <table class="table table-striped table-bordered table-hover" id="loanList">


                <thead>
                 
                    <tr>
                        <th>接案年份</th>
                        <th>接案月份</th>
                        <th>地区</th>
                        <th>部门</th>
                        <th>部长/组长</th>
                        <th>专业顾问</th>
                        <th>客户名称</th>
                        <th>新/老客户</th>
                        <th>客户级别</th>

                        <th>客户忠诚度</th>
                        <th>客户流派</th>
                        <th>案号</th>
                        <th>原告</th>
                        <th>被告</th>



                        <th>项目</th>
                        <th>板块</th>
                        <th>性质</th>
                        <th>移交标的</th>

                        <th>预期收益</th>
                        <th>管辖法院</th>
                        

                  

                    </tr>
                </thead>
                <tbody>
                    <!--数据行在这里-->
                </tbody>
            </table>
        </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
</div>


<!-- END PAGE CONTENT-->
<script type="text/javascript" src="/theme/oajs/bar.js"></script>
<!-- BEGIN MAIN JS -->
<script>                             
    var defaultColumns = [

         { "sName": "R_TakeCase_Reporting_year" },
         { "sName": "R_TakeCase_Reporting_month" },
         { "sName": "R_TakeCase_Reporting_area" },
         { "sName": "R_TakeCase_Reporting_dept" },
         { "sName": "R_TakeCase_Reporting_minister" },
         { "sName": "B_TakeCase_Reporting_consultant" },
         { "sName": "B_TakeCase_Reporting_customer" },
         { "sName": "B_TakeCase_Reporting_newOrOld" },
         { "sName": "B_TakeCase_Reporting_level" },
         { "sName": "B_TakeCase_Reporting_loyalty" },
         { "sName": "B_TakeCase_Reporting_sect" },
         { "sName": "B_TakeCase_Reporting_caseNumber" },
         { "sName": "B_TakeCase_Reporting_relCustomer" },
         { "sName": "B_TakeCase_Reporting_rival" },
         { "sName": "B_TakeCase_Reporting_project" },
         { "sName": "B_TakeCase_Reporting_plate" },
         { "sName": "B_TakeCase_Reporting_property" },
         { "sName": "B_TakeCase_Reporting_transferTarget" },
         { "sName": "B_TakeCase_Reporting_expectedReturn" },
         { "sName": "B_TakeCase_Reporting_court" },
         

    ];//table 默认列扩展
 
    var submitUrl = '/Reporting/R_TakeCase_Reporting/AjaxList';//数据获取地址

    TableManaged.init('loanList', "loan_search", defaultColumns, submitUrl);//用table id,table search id,默认列 初始化table对象

    function TbService() {
        if ($("#tbmsg").text() != "同步数据") {
            alert("数据同步中，请勿重复点击...");
            return;
        }

        $("#tbmsg").text("同步中...");

        $.ajax({
            type: 'POST',
            url: "/Reporting/R_TakeCase_Reporting/TbService",
            cache: false,
            success: function (result) {
                alert(result);
                $("#tbmsg").text("同步数据");
            }
        });
    }

    function downExl() {


        window.location.href = '/Reporting/R_TakeCase_Reporting/Export';

    }
</script>
<!-- END MAIN JS -->
