@using CommonService.Model.SysManager;
@model IEnumerable<CommonService.Model.SysManager.C_Roles>
@section HeadScript
{
    <script type="text/javascript">
        $(function (){
            $("tbody tr", $globalTablelist).each(function () {                
                var $this = $(this);
                if ($this.hasClass('selected')) {
                    window.commonListData.uniqueId = $this.attr('rel');
                }                 
            });
        });
    </script>
}

@{
    Layout = "~/Views/Shared/_NoPageListTemplate.cshtml";//无分页列表页面固定模板
}
@{
    ViewBag.Title = "组织机构->岗位->角色";//单选带回
}
@{
    List<CommonService.Model.SysManager.C_Roles> postConditon = ViewBag.PostConditon;//岗位条件模型
}
<table class="tablelist">
    <thead>
        <tr>
            <th style="text-align:center;">角色列表</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            bool flag = false;
            if ((!string.IsNullOrEmpty(ViewBag.roleCode)) && ViewBag.roleCode == item.C_Roles_id.ToString())
            {
                flag = true;
            }
            if (flag)
            {
                <tr target="sid_Iterm" rel="@item.C_Roles_id" align=center class="selected">
                    <td>@item.C_Roles_name</td>
                </tr>
            }
            else
            {
                <tr target="sid_Iterm" rel="@item.C_Roles_id" align=center>
                    <td>@item.C_Roles_name</td>
                </tr>
            }

        }
    </tbody>
</table>
