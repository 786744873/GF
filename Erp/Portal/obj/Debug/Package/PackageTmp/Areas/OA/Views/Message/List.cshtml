@{
    Layout = null;
}
<!-- BEGIN PAGE HEADER-->
@{Html.RenderAction("OAContentPageHead");}
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box green-meadow">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-user"></i>我的消息
                </div>
                <div class="list_tool_dialog_toolbar actions">
                    @*<a class="btn btn-default btn-sm" href="/oa/article/create" data-target="#baseLargeModal" data-toggle="modal">
                        <i class="fa fa-pencil"></i> 新增
                    </a>*@
                    @*<div class="btn-group">
                        <a class="btn btn-default btn-sm" href="javascript:;" data-toggle="dropdown">
                            <i class="fa fa-cogs"></i> 工具栏 <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a href="/oa/message/Details?scheduleCode={sid_Iterm}" operatetargettype="popdialog" operatetargetid="baseLargeModal" relationid="a_edit" nodatatip="请选中信息！" edit="edit">
                                    <i class="fa fa-trash-o"></i> 消息详细
                                </a>
                            </li>
                        </ul>
                    </div>*@
                </div>
            </div>
            <div class="portlet-body">
                <div id="messageList_search" class="row">
                    @Html.Hidden("isExecutedSearch", "0")
                    <div class="col-md-12">
                        <div class="col-md-9"></div>
                        <div class="col-md-2">
                            <div class="form-group">
                                消息标题：<input name="s_title" id="s_title" type="text" class="form-control input-small input-inline">
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="btn-group pull-right">
                                <div class="btn-group">
                                    <button class="btn green" onclick="executeSearch('messageList', 'messageList_search')">
                                        查询<i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="messageList">
                    <thead>
                        <tr>
                            <th>日程GUID</th>
                            <th>消息内容</th>
                            <th>消息状态</th>
                            <th>发送时间</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--数据行在这里-->
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
<!-- END PAGE CONTENT-->
<!-- BEGIN MAIN JS -->
<script type="text/javascript" src="/theme/oajs/bar.js"></script>
<script>
    var defaultColumns = [
         { "sName": "C_Messages_link", "bVisible": false },
         { "sName": "C_Messages_content","render": function (data, type, full) { if (data.length > 40) { data = data.substring(0, 40) + "..." } return "<a href='' style='color:#5b9bd1' class='ajaxify'>" + data + "</a>"; }  },
         { "sName": "C_Messages_isRead" },
         { "sName": "C_Messages_createTime" }
    ];//table 默认列扩展
    var submitUrl = '/oa/message/ajaxlist';//数据获取地址
    TableManaged.init('messageList', 'messageList_search', defaultColumns, submitUrl);//用table id,table search id,默认列 初始化table对象
</script>
<!-- END MAIN JS -->
