@using CommonService.Model.CaseManager;
@model IEnumerable<CommonService.Model.CaseManager.B_Oppint>
@{
    Layout = "~/Views/Shared/_ListSearchWithDialogTemplate.cshtml";//带表单查询的列表页面固定模板
}
@{
    ViewBag.Title = "担保物约定";
}

@{
    B_Oppint Conditon = ViewBag.Conditon;//条件模型
}
<div class="tools">
    <ul class="toolbar">
        <li><a target="popdialog" title="担保物约定" dialogwidth="800" dialogheight="450" href="/casemanager/oppint/create?caseCode=@Conditon.B_Case_code"><span><img src="/theme/images/new_add.png" /></span>添加</a></li>
        <li><a target="popdialog" title="担保物约定" dialogwidth="800" dialogheight="450" edit="edit" href="/casemanager/oppint/edit?oppintId={sid_Iterm}"><span><img src="/theme/images/new_edit.png" /></span>修改</a></li>
        <li><a target="ajaxtodo" title="确认要删除选中数据吗?" singleoperate="singleoperate" href="/casemanager/oppint/delete?oppintId={sid_Iterm}"><span><img src="/theme/images/new_delete.png" /></span>删除</a></li>
    </ul>
</div>

<table class="tablelist">
    <thead>
        <tr>
            <th>担保物</th>
            <th>担保物价值</th>
            <th>客户其他需求</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr target="sid_Iterm" rel="@item.B_Oppint_id" relname="@item.B_Oppint_guaranty_name">
                <td>@item.B_Oppint_guaranty_name</td>
                <td>@item.B_Oppint_guarantyvalue</td>
                <td>@item.B_Oppint_coneed</td>
            </tr>
        }
    </tbody>
</table>    